<html>
  <head>
    <title>Tolkien</title>
    <style>
      /* GENERAL */
      body {
        font-family: sans-serif;
        font-size: 0.7em;
        margin: 0;
        margin-top: 60px;
      }

      /* HEADER */
      .header {
        min-width: 946px;
        margin: 0;
        padding: 1em;
        background-color: #fff;
        z-index: 999 !important;
        position: fixed;
        top: 0;
        width: 100%;
        -webkit-box-shadow: 0 8px 6px -6px #ccc;
        	   -moz-box-shadow: 0 8px 6px -6px #ccc;
        	        box-shadow: 0 8px 6px -6px #ccc;
      }

      .header h1, .header form {
        display: inline;
        vertical-align: middle;
      }

      .header h1 {
        margin-right: 2em;
      }
      
      .pull-right {
        float:right;
        padding-right:20px;
      }

      /* TRANSLATIONS */
      table.keys {
        width: 100%;
      }

      table.keys .key {
        padding-left: 0.5em;
      }

      table.keys tr.translation > td {
        border-bottom: 1px solid #bbb;
      }

      table.keys tr.translation.incomplete .key .text {
        border-bottom: 3px solid #f33;
      }

      table.keys tr.translation.empty .key .text {
        border-bottom: 3px solid #33f;
      }

      table.keys td.key {
        width: 300px;
      }

      table.locales td.value input {
        width: 600px;
      }

      table.locales td.value input[type=radio] {
        width: 20px;
      }

      table.locales td.value label {
        margin-right: 20px;
      }

      /* CATEGORIES */

      table.categories {
        width: 100%;
      }

      table.categories .key {
        padding-left: 0.5em;
      }

      table.categories tr.category a {
        text-decoration: none;
      }

      table.categories tr.category > td {
        border-bottom: 1px solid #bbb;
      }

      table.categories tr.category > td {
        padding-top: 1em;
        padding-bottom: 1em;
      }

      table.categories tr.category.incomplete .key .text {
        border-bottom: 3px solid #f33;
      }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
  </head>

  <body>
    <div class="header">
      <h1>Tolkien</h1>

      <form action="/<%= relative_root %>/" method="get">
        <label>
          Key:
          <input name="filters[key]" type="text" value="<%= filters["key"] %>" />
        </label>

        <label>
          Text:
          <input name="filters[text]" type="text" value="<%= filters["text"] %>" />
        </label>

        <label>
          <input name="filters[incomplete]" type="checkbox" <%= "checked=checked" if filters["incomplete"] == "on" %> />
          Incomplete
        </label>
        <label>
          <input name="filters[empty]" type="checkbox" <%= "checked=checked" if filters["empty"] == "on" %> />
          Empty
        </label>

        <input type="submit" value="Filter" />
      </form>

      <form action="/<%= relative_root %>/" method="get">
        <input type="submit" value="Clear" />
      </form>

      <form action="/<%= relative_root %>/restart" method="get">
        <input id="restart_servers" onclick="getElementById('restart_servers').value = 'Servers restarting...'" type="submit" value="Restart servers" />
      </form>

      <div class="pull-right">
      </div>
    </div>

    <div class="content">
      <%= content %>
    </div>
  </body>
</html>
